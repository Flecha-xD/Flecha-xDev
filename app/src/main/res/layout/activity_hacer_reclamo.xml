<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context="proingsoftware.activities.consumidor.HacerReclamoActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:background="@color/colorOrange"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="REGISTRO DE RECLAMO"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:textStyle="bold">

        </TextView>
    </RelativeLayout>

    <EditText
        android:id="@+id/nombre"
        android:layout_width="250dp"
        android:layout_height="37dp"
        android:layout_gravity="center"
        android:layout_marginTop="45dp"
        android:background="@drawable/round_box"
        android:hint="Nombre Completo"
        android:inputType="text"
        android:text=""
        android:maxLength="50"
        android:paddingStart="10dp"
        android:singleLine="true"
        android:textColor="@color/colorAccent"
        android:textColorHint="@color/colorAccent" />

    <GridLayout
        android:id="@+id/menuGrid"
        android:layout_width="240dp"
        android:layout_height="57dp"
        android:layout_gravity="center"
        android:columnCount="2"
        android:columnOrderPreserved="false">


        <EditText
            android:id="@+id/carnet"
            android:layout_width="150dp"
            android:layout_height="37dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginTop="13dp"
            android:text=""
            android:background="@drawable/round_box"
            android:gravity="center"
            android:hint="C.I."
            android:inputType="number"
            android:maxLength="7"
            android:paddingStart="4dp"
            android:singleLine="true"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/colorAccent" />

        <EditText
            android:id="@+id/extension"
            android:layout_width="70dp"
            android:layout_height="37dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:text=""
            android:layout_marginTop="8dp"
            android:background="@drawable/round_box"
            android:gravity="center"
            android:hint="Ext."
            android:inputType="textCapCharacters"
            android:maxLength="4"
            android:singleLine="true"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/colorAccent" />
    </GridLayout>

    <EditText
        android:id="@+id/celular"
        android:layout_width="250dp"
        android:layout_height="37dp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:background="@drawable/round_box"
        android:hint="Número Celular"
        android:text=""
        android:inputType="number"
        android:maxLength="8"
        android:paddingStart="10dp"
        android:singleLine="true"
        android:textColor="@color/colorAccent"
        android:textColorHint="@color/colorAccent" />

    <EditText
        android:id="@+id/email"
        android:layout_width="250dp"
        android:layout_height="37dp"
        android:layout_gravity="center"
        android:layout_marginTop="14dp"
        android:background="@drawable/round_box"
        android:hint="Correo Electrónico"
        android:inputType="textEmailAddress"
        android:maxLength="40"
        android:text=""
        android:paddingStart="10dp"
        android:singleLine="true"
        android:textColor="@color/colorAccent"
        android:textColorHint="@color/colorAccent" />

    <EditText
        android:id="@+id/dpto"
        android:layout_width="250dp"
        android:layout_height="37dp"
        android:layout_gravity="center"
        android:layout_marginTop="14dp"
        android:background="@drawable/round_box"
        android:hint="Departamento"
        android:text=""
        android:inputType="text"
        android:maxLength="10"
        android:paddingStart="10dp"
        android:singleLine="true"
        android:textColor="@color/colorAccent"
        android:textColorHint="@color/colorAccent" />

    <EditText
        android:id="@+id/prodserv"
        android:layout_width="250dp"
        android:layout_height="37dp"
        android:layout_gravity="center"
        android:layout_marginTop="14dp"
        android:background="@drawable/round_box"
        android:hint="Producto/Servicio"
        android:inputType="text"
        android:maxLength="20"
        android:paddingStart="10dp"
        android:text=""
        android:singleLine="true"
        android:textColor="@color/colorAccent"
        android:textColorHint="@color/colorAccent" />

    <EditText
        android:id="@+id/descripQueja"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="14dp"
        android:background="@drawable/round_box"
        android:hint="Descripción"
        android:inputType="textMultiLine"
        android:text=""
        android:maxLength="80"
        android:gravity="top"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:singleLine="true"
        android:textColor="@color/colorAccent"
        android:textColorHint="@color/colorAccent" />


    <Button
        android:id="@+id/siguienteButton"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_button_aqua"
        android:text="Siguiente"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
    />
</LinearLayout>