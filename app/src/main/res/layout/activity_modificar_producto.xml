<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    android:weightSum="10"
    tools:context="proingsoftware.activities.funcionario.ModificarProductoActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:background="@color/colorOrange"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="EDITAR PRODUCTO"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:textStyle="bold">

        </TextView>
    </RelativeLayout>



    <EditText
        android:id="@+id/codigofuncEP"
        android:layout_gravity="center"
        android:layout_width="250dp"
        android:layout_height="46dp"
        android:background="@drawable/round_box"
        android:hint="Codigo Funcionario"
        android:inputType="numberPassword"
        android:maxLength="15"
        android:paddingStart="10dp"
        android:textColor="@color/colorAccent"
        android:textColorHint="@color/colorAccent"
        android:singleLine="true"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:id="@+id/contraseniaact"
        android:layout_gravity="center"
        android:layout_width="250dp"
        android:layout_height="46dp"
        android:background="@drawable/round_box"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:maxLength="15"
        android:paddingStart="10dp"
        android:textColor="@color/colorAccent"
        android:textColorHint="@color/colorAccent"
        android:singleLine="true"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="12dp"
        android:textStyle="bold"
        android:text="DATOS A CAMBIAR">

    </TextView>

    <EditText
        android:id="@+id/nombreprodact"
        android:layout_gravity="center"
        android:layout_width="250dp"
        android:layout_height="46dp"
        android:background="@drawable/round_box"
        android:hint="Nombre del Producto"
        android:inputType="text"
        android:maxLength="50"
        android:text=""
        android:paddingStart="10dp"
        android:textColor="@color/colorAccent"
        android:textColorHint="@color/colorAccent"
        android:singleLine="true"
        android:layout_marginTop="10dp"
        />

    <GridLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:layout_gravity="center">

    <EditText
        android:id="@+id/codact"
        android:layout_gravity="center"
        android:layout_width="150dp"
        android:layout_height="46dp"
        android:background="@drawable/round_box"
        android:hint="Codigo producto"
        android:textSize="18dp"
        android:gravity="center"
        android:textColor="@color/colorAccent"
        android:textColorHint="@color/colorAccent"
        android:singleLine="true"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:id="@+id/precioact"
        android:layout_gravity="center"
        android:layout_width="91dp"
        android:layout_height="46dp"
        android:layout_marginStart="5dp"
        android:background="@drawable/round_box"
        android:hint="Precio Bs."
        android:inputType="number"
        android:text=""
        android:maxLength="50"
        android:paddingStart="5dp"
        android:textColor="@color/colorAccent"
        android:textColorHint="@color/colorAccent"
        android:singleLine="true"
        android:layout_marginTop="10dp"
        />

    </GridLayout>
    <EditText
        android:id="@+id/descact"
        android:layout_gravity="center"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_box"
        android:hint="Descripción"
        android:inputType="text"
        android:maxLength="400"
        android:text=""
        android:gravity="top"
        android:paddingTop="10dp"
        android:paddingStart="10dp"
        android:textColor="@color/colorAccent"
        android:textColorHint="@color/colorAccent"
        android:singleLine="true"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:paddingTop="5dp">
        <ImageButton
            android:id="@+id/galeria3Button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/galeria"
            android:scaleType="fitCenter" />

        <ImageView
            android:id="@+id/imageact"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:background="@drawable/redondeo"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="200dp"
            android:layout_marginEnd="70dp"
            />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="1dp"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/actprod"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/round_button_aqua"
            android:text="Actualizar"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:layout_alignEnd="@id/delprod"
            android:layout_marginBottom="100dp"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/delprod"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_gravity="center"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="100dp"
            android:background="@drawable/round_button_aqua"
            android:text="Borrar"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />
    </RelativeLayout>
</LinearLayout>